<%= simple_form_for @account, url: account_path do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :billing_email, label: 'Billing email' %>
  <%= f.submit class: 'mx-8 my-4 cursor-pointer text-xs text-white font-bold bg-purple-500 py-4 px-6 rounded-lg w-60 disabled:opacity-50' %>
<% end %>
