<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-white border-b border-1 border-purple-200 z-50 mb-8">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!--
            Icon when menu is closed.

            Heroicon name: outline/menu

            Menu open: "hidden", Menu closed: "block"
          -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!--
            Icon when menu is open.

            Heroicon name: outline/x

            Menu open: "block", Menu closed: "hidden"
          -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <a href="<%= root_path %>" class="flex-shrink-0 flex items-center">
          <img class="block lg:hidden h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg" alt="Workflow">
          <img class="hidden lg:block h-8 w-auto" src="https://tailwindui.com/img/logos/workflow-logo-indigo-500-mark-white-text.svg" alt="Workflow">
        </a>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <!-- Current: "bg-purple-500 text-white px-3 py-2 rounded-md text-sm font-medium" -->
            <% if user_signed_in? %>
            <a href="<%= root_path %>" class="text-gray-400 hover:text-purple-500 px-3 py-2 rounded-md text-sm font-medium"> Dashboard</a>
            <% end %>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <% if user_signed_in? %>
        <!-- Profile dropdown -->
        <div data-controller="dropdown" class="ml-3 relative">
          <div>
            <button data-action="click->dropdown#toggle" class="flex flex-row text-gray-400 px-2 py-2 rounded-md text-sm font-medium">
              <%= current_user.email %>
              <%= heroicon "chevron-down", options: { class: "ml-1 h-5 w-5" } %>
            </button>
          </div>

          <div data-dropdown-target="menu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
            <!-- Active: "bg-gray-100", Not Active: "" -->
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'block px-4 py-2 text-sm text-gray-700 hover:text-black' %>
          </div>
        </div>
        <% else %>
          <a href="<%= new_user_session_path %>" class="text-gray-400 hover:text-purple-500 px-3 py-2 rounded-md text-sm font-medium"> Sign in</a>
          <a href="<%= new_user_registration_path %>" class="text-gray-400 hover:text-purple-500 px-3 py-2 rounded-md text-sm font-medium"> Sign up</a>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="<%= root_path %>" class="text-gray-400 px-3 py-2"> Dashboard</a>
      <a href="#" class="text-gray-300 block px-3 py-2">Team</a>
      <a href="#" class="text-gray-300 block px-3 py-2">Projects</a>
      <a href="#" class="text-gray-300 block px-3 py-2">Calendar</a>
    </div>
  </div>
</nav>